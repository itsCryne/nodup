{
  "compilerOptions": {
    "target": "ESNext",                          
    "module": "ESNext",        
    "moduleResolution": "node",             
    "lib": ["ESNext"],                           
    "allowJs": true,
    "outDir": "build",                        
    "rootDir": "src",
    "strict": true,                           
    "noImplicitAny": true,                    
    "esModuleInterop": true,                  
    "resolveJsonModule": true,                
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  }
}
